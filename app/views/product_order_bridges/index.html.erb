<h1>Listing product_order_bridges</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_order_bridges.each do |product_order_bridge| %>
      <tr>
        <td><%= product_order_bridge.order %></td>
        <td><%= product_order_bridge.product %></td>
        <td><%= link_to 'Show', product_order_bridge %></td>
        <td><%= link_to 'Edit', edit_product_order_bridge_path(product_order_bridge) %></td>
        <td><%= link_to 'Destroy', product_order_bridge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

